@model IEnumerable<Phiyesa.AutoModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="div_admin_pageheader">
    <table class="table_admin_pageheader">
        <tr>
            <td><h3>Auto Model | @ViewBag.SelectedCarMake</h3></td>
            <td align="right">
                @{
                    <a href=@Url.Action("Create", "AutoModels")><img src="~/images/add_icon.png" /></a>
                }
            </td>
        </tr>
    </table>
</div>


<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.CarMake)</th>
        <th>@Html.DisplayNameFor(model => model.CarModelDesc)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.getCarMakeDesc)</td>
            <td>@Html.DisplayFor(modelItem => item.CarModelDesc)</td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm())
{
    <div class="div_space20"></div>
    <div class="row">

        <div class="col-md-3">
            @Html.DropDownList("selCarMake", (SelectList)ViewBag.ListOfCarMake, "- Select A Car Make -", new { @class = "form-control" })
        </div>

        <div class="col-md-9">
            <input type="submit" value="Filter" class="btn btn-default" />
        </div>

    </div>
}