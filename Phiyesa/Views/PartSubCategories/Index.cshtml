@model IEnumerable<Phiyesa.PartSubCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="div_admin_pageheader">
    <table class="table_admin_pageheader">
    <tr>
        <td><h3>Auto Part Sub Categories</h3></td>
        <td align="right">
            @{
                <a href=@Url.Action("Create", "PartSubCategories")><img src="~/images/add_icon.png" /></a>
            }
        </td>
    </tr>
    </table>
</div>


<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.PartCategory)</th>
        <th>@Html.DisplayNameFor(model => model.PartSubCategoryDesc)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.getPartCategoryDesc)</td>
        <td>@Html.DisplayFor(modelItem => item.PartSubCategoryDesc)</td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
