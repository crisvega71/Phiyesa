@model IEnumerable<Phiyesa.AutoPart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div class="div_admin_pageheader">
    <table class="table_admin_pageheader">
    <tr>
        <td><h3>Auto Parts</h3></td>
        <td align="right">
            @{
                //if (Session["USER_TYPE"].ToString() == "1" || Session["USER_TYPE"].ToString() == "2")
                //{
                <a href=@Url.Action("Create", "AutoParts")><img src="~/images/add_icon.png" /></a>
                //}
            }
        </td>
    </tr>
    </table>
</div>


<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.PartNo)</th>
        <th>@Html.DisplayNameFor(model => model.PartCategory)</th>
        <th>@Html.DisplayNameFor(model => model.PartSubCategory)</th>
        <th>@Html.DisplayNameFor(model => model.PartDescription)</th>
        <th>@Html.DisplayNameFor(model => model.PartImage)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.PartNo)</td>
        <td>@Html.DisplayFor(modelItem => item.getCategoryDesc)</td>
        <td>@Html.DisplayFor(modelItem => item.getSubCategoryDesc)</td>
        <td>@Html.DisplayFor(modelItem => item.PartDescription)</td>
        <td>
            @Html.DisplayFor(modelItem => item.PartImage)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Image", "Image", new { id = item.Id })
        </td>
    </tr>
}

</table>
